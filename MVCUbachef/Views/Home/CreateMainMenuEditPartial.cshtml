

<!DOCTYPE html>

<meta http-equiv="content-type" content="text/html;charset=utf-8" /><!-- /Added by HTTrack -->
<html>


<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no">
    <title>The Uba Chef</title>
    <link rel="apple-touch-icon" href="~/assets/images/apple-touch-icon.png" />
    <script>
        if (window.screen.height == 568) { // iPhone 4"
            document.querySelector("meta[name=viewport]").content = "width=320.1";
        }
    </script>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <!-- css -->
    <link rel="stylesheet" href="~/Content/mobile/1.3.0/jquery.mobile-1.3.0.min.css" />
    <link rel="stylesheet" href="~/assets/css/style2.css">

    <!-- scripts -->
    <script src="~/Content/jquery-1.8.2.min.js"></script>
    <script src="~/Content/mobile/1.3.0/jquery.mobile-1.3.0.min.js"></script>
    <script src="~/assets/js/screen.js"></script>

</head>
<body>

    <div data-role="page">

        <!-- main content -->
        <div data-role="content">

            @if (ViewBag.CuizineType == "CLASSIC BBQ")
            {
                <!-- slider -->
                <div class="slider-outer">
                    <div class="slider-container">
                        <div id="camera_wrap">

                            <div data-src="assets/images/CLASSICBBQ/1.jpg" width="100%">
                                <div class="camera_caption fadeFromBottom">
                                </div>
                            </div>

                            <div data-src="assets/images/CLASSICBBQ/2.jpg" width="100%">
                                <div class="camera_caption fadeFromBottom" width="100%">
                                </div>
                            </div>

                            <div data-src="assets/images/CLASSICBBQ/3.jpg" width="100%">
                                <div class="camera_caption fadeFromBottom" width="100%">
                                </div>
                            </div>

                            <!--<div data-src="assets/images/headers/4.jpg">
                            </div>-->

                        </div>
                    </div>
                    <br class="clear" />
                </div>
                <!-- /slider -->
            }

            @if (ViewBag.CuizineType == "PLATTERS")
            {
                <!-- slider -->
                <div class="slider-outer">
                    <div class="slider-container">
                        <div id="camera_wrap">

                            <div data-src="assets/images/PLATTERS/1.jpg" width="100%">
                                <div class="camera_caption fadeFromBottom">
                                </div>
                            </div>

                            <div data-src="assets/images/PLATTERS/2.jpg" width="100%">
                                <div class="camera_caption fadeFromBottom" width="100%">
                                </div>
                            </div>

                            <div data-src="assets/images/PLATTERS/3.jpg" width="100%">
                                <div class="camera_caption fadeFromBottom" width="100%">
                                </div>
                            </div>

                            <!--<div data-src="assets/images/headers/4.jpg">
                    </div>-->

                        </div>
                    </div>
                    <br class="clear" />
                </div>
                <!-- /slider -->
            }


            @if (ViewBag.CuizineType == "EXECUTIVE STEAK")
            {
                <!-- slider -->
                <div class="slider-outer">
                    <div class="slider-container">
                        <div id="camera_wrap">

                            <div data-src="assets/images/ExecutiveSteak/1.jpg" width="100%">
                                <div class="camera_caption fadeFromBottom">
                                </div>
                            </div>

                            <div data-src="assets/images/ExecutiveSteak/2.jpg" width="100%">
                                <div class="camera_caption fadeFromBottom" width="100%">
                                </div>
                            </div>

                            <div data-src="assets/images/ExecutiveSteak/3.jpg" width="100%">
                                <div class="camera_caption fadeFromBottom" width="100%">
                                </div>
                            </div>

                            <!--<div data-src="assets/images/headers/4.jpg">
                    </div>-->

                        </div>
                    </div>
                    <br class="clear" />
                </div>
                <!-- /slider -->
            }


            <section>
                <h2>Booking information</h2>

                <input type="hidden" id="CuizineTypeId"  name="CuizineTypeId" value="@ViewBag.CuizineType" />

                <p>
                    <label for="People">
                        <span>People:</span>
                        <strong><abbr title="required">*</abbr></strong>
                    </label>
                    <input type="number" id="People" onchange="OnPeopleChange()" name="People">
                </p>

                <p>
                    <label for="RequestDate ">
                        <span>Request Date: (Should be 2 days after Today)</span>
                        <strong><abbr title="required">*</abbr></strong>
                    </label>
                    <input type="date" id="RequestDate" name="RequestDate">
                </p>

                <p>
                    <label for="FromTime ">
                        <span>From:</span>
                        <strong><abbr title="required">*</abbr></strong>
                    </label>
                    <input type="time" id="FromTime" name="FromTime">
                </p>

                <p>
                    <label for="ToTime ">
                        <span>To:</span>
                        <strong><abbr title="required">*</abbr></strong>
                    </label>
                    <input type="time" id="ToTime" name="ToTime">
                </p>

                <p>
                    <label for="Occasion">
                        <span>Occasion:</span>
                    </label>
                    <select id="OccasionId" name="OccasionId">
                        <option value="BreakFast">BreakFast</option>
                        <option value="Lunch">Lunch</option>
                        <option value="Dinner">Dinner</option>
                    </select>
                </p>

                <p>
                    <label for="Events">
                        <span>Events:</span>
                    </label>
                    <select id="EventId" name="EventId">
                        <option value="Birthday">Birthday</option>
                        <option value="Wedding">Wedding</option>
                        <option value="Graduation">Graduation </option>
                        <option value="Other">Other </option>
                    </select>
                </p>

                <p>
                    <label for="AddressId">
                        <span>Event Address:</span>

                    </label>
                    <input type="text" id="AddressId" name="AddressId">
                </p>


                <p>
                    <label for="emailId">
                        <span>Email:</span>

                    </label>
                    <input type="email" id="emailId" name="emailId">
                </p>

                <p>
                    <label for="phoneNo">
                        <span>phoneNo:(start with country code e.g +27)</span>

                    </label>
                    <input type="tel" id="phoneNo" name="phoneNo">
                </p>

                <label for="pricevalueId">
                    <span>Total Price:</span>
                </label>
                <input type="text" id="pricevalueId" name="pricevalueId" style="text-align:center; background-color: red;  color: white;" value="" disabled>

                <p id="TotalPriceId"></p>

                <p>
                    <input type="button" id="Request" onclick="myFunction()" value="Request Chef" name="Request">
                </p>
            </section>

        </div>
        <!-- /content -->

    </div><!-- /page -->
    <!-- slider -->
    <script>
        jQuery(function () {
            jQuery('#camera_wrap').camera({

            });
        });
    </script>
    <!-- /slider -->

    <script>
        function myFunction() {

            var PeopleId = document.getElementById("People").value;
            var FromTime = document.getElementById("FromTime").value;
            var ToTime = document.getElementById("ToTime").value;
            var emailId = document.getElementById("emailId").value;
            var phoneNo = document.getElementById("phoneNo").value;
            var AddressId = document.getElementById("AddressId").value;
            var TotalPriceId = document.getElementById("pricevalueId").value;
            var CuizineTypeId = document.getElementById("CuizineTypeId").value;
            var e = document.getElementById("EventId");
            var EventIdValue = e.options[e.selectedIndex].value;
            var numberofplates = 0;
            var ee = document.getElementById("OccasionId");
            var OccasionIdValue = ee.options[ee.selectedIndex].value;
            var RequestDate = document.getElementById("RequestDate").value;
        
            var MyIdInfo = PeopleId + "," + numberofplates + "," + emailId + "," + phoneNo
                + "," + OccasionIdValue + "," + EventIdValue + ","
                + CuizineTypeId + "," + AddressId + "," + FromTime + "," + ToTime + "," + TotalPriceId + "," + RequestDate + "";

            window.location.href = "/Home/SavePayments?PeopleId=" + MyIdInfo;

        }

        function OnPeopleChange() {
            var PeopleId = document.getElementById("People").value;
            var CuizineTypeId = document.getElementById("CuizineTypeId").value;
            
           
            var results = parseInt(document.getElementById("People").value);


            if (CuizineTypeId == "CLASSIC BBQ")
            {
                if (results < 10) {
    
                    document.getElementById("pricevalueId").value = "R250.00";

                }

                else {
           
                    document.getElementById("pricevalueId").value = "R200.00";

                }

            }

            if (CuizineTypeId == "PLATTERS") {
                if (results < 10) {
                    document.getElementById("pricevalueId").value = "R300.00";

                }

                else {
                    document.getElementById("pricevalueId").value = "R250.00";

                }

            }

            if (CuizineTypeId == "EXECUTIVE STEAK") {
                if (results < 10) {
                  
                    document.getElementById("pricevalueId").value = "R300.00";

                }

                else {
          
                    document.getElementById("pricevalueId").value = "R350.00";

                }

            }

                 }

        
    </script>

</body>
</html>